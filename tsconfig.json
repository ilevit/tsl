{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",

    "compilerOptions": {
      "rootDir": ".",
      "outDir": "build",
  
      "target": "ESNext",
      "lib": ["ESNext"],
      
      "module": "nodenext",
      "moduleResolution": "nodenext",
  
      "declaration": false,
      "declarationMap": false,
  
      "strict": true,
      "types": ["tts-types"],
    },
    "tstl": {
      "luaTarget": "5.2",
      "noImplicitSelf": true,
      "tstlVerbose": true,
      "luaBundle": "bundle.lua",
      "luaBundleEntry": "src/index.ts",
    },
  }